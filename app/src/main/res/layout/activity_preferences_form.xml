<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".PreferencesFormActivity">

    <ScrollView
        android:layout_width="409dp"
        android:layout_height="729dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginTop="20dp"
                android:text="Preferencias"
                android:textSize="24sp" />

            <EditText
                android:id="@+id/emailTxt"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginTop="30dp"
                android:hint="Coreo Electronico"
                android:inputType="textEmailAddress" />

            <EditText
                android:id="@+id/firstnameTxt"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginTop="30dp"
                android:hint="Nombre" />

            <EditText
                android:id="@+id/lastnameTxt"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginTop="30dp"
                android:hint="Apellidos" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginTop="30dp"
                android:text="Temperatura" />

            <NumberPicker
                android:id="@+id/temperatureNumber"
                android:layout_width="match_parent"
                android:layout_height="100dp" />

            <Switch
                android:id="@+id/medicalConditionSwitch"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginTop="30dp"
                android:text="Problemas respiratorios?" />

            <Spinner
                android:id="@+id/medicalConditionLevel"
                android:layout_width="match_parent"
                android:layout_height="50dp" />

            <Button
                android:id="@+id/saveRequestBtn"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="GUARDAR PREFERENCIAS" />
        </LinearLayout>
    </ScrollView>
</androidx.constraintlayout.widget.ConstraintLayout>

